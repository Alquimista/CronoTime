#:import get_color_from_hex kivy.utils.get_color_from_hex

<RoundedButton@Button>:
    background_normal: ''
    background_down: ''
    background_disabled_down: ''
    background_disabled_normal: ''
    background_color: 0, 0, 0, 0
    bgcolor: get_color_from_hex(#6200ee)
    canvas.before:
        Color:
        rgba: self.bgcolor
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

<UiTest>
    FloatLayout:
        size: root.size
        # Label:
        #     text: 'Hello, world!'
        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            pos_hint: {'center_x': .5, 'center_y': .5}
            RoundedButton:
                text: 'Click me! 1'
                size: 100, 50
                size_hint: None, None
            RoundedButton:
                text: 'Click me! 2'
                size: 100, 50
                size_hint: None, None
            RoundedButton:
                text: 'Click me! 3'
                size: 100, 50
                size_hint: None, None
